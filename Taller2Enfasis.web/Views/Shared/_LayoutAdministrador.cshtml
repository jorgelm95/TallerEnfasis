<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body style="padding-top:0px;">
    <div class="container">
        <div class="row clearfix">
            <div class="col-md-12 column">
                <div class="row clearfix">
                    <div class="col-md-4 column">
                    </div>
                    <div class="col-md-8 column">
                        <ul class="nav nav-tabs">
                            <li>
                                <p><strong>hola administrador @ViewBag.Administrador</strong> </p>
                            </li>
                            <li>
                                @Html.ActionLink("Inicio", "Index", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Entrar", "Login", "Usuario")
                            </li>
                            <li>
                                @Html.ActionLink("Panel Administrativo", "IndexAdministrador", "Administrador")
                            </li>
                            <li>
                                @Html.ActionLink("Contactenos", "Contactenos")
                            </li>
                        </ul>
                    </div>
                </div>
                <br />
                <br />
                <div class="row clearfix">
                    <div class="col-md-4 column">
                        <ul class="nav nav-pills nav-stacked">
                            <li class="active">@Html.ActionLink("Registrar Artistas", "GuardarArtista", "Artista")</li>
                            <li class="active">@Html.ActionLink("Discos", "listaDiscos", "Disco")</li>
                            <li class="active">@Html.ActionLink("Canciones", "listaCanciones", "Cancion")</li>
                            <li class="active">@Html.ActionLink("Artistas", "IndexAdministrador", "Administrador")</li>
                            <li class="active">@Html.ActionLink("Nuevo Aministrador", "CrearAdministrador", "Administrador")</li>
                        </ul>
                    </div>
                    <div class="col-md-8 column">
                        <div>
                            @RenderBody()
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <hr />
                <div class="row clearfix">
                    <div class="col-md-6 column">
                     <p>
                        <strong>Trabajo academico hecho por;</strong>
                        <p> Jorge luis Menco </p>
                        <p> David Castaño</p>
                      </p>
                    </div>
                    <div class="col-md-6 column">
                        <div class="row clearfix">
                            <div class="col-md-4 column">
                                <img alt="140x140" src="http://lorempixel.com/140/140/">
                            </div>
                            <div class="col-md-4 column">
                                <img alt="140x140" src="http://lorempixel.com/140/140/">
                            </div>
                            <div class="col-md-4 column">
                                <img alt="140x140" src="http://lorempixel.com/140/140/">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)

    </div>

</body>
</html>
